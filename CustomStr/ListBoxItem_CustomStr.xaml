<ListBoxItem x:Class="EasyCom.ListBoxItem_CustomStr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyCom"
             mc:Ignorable="d" HorizontalContentAlignment="Stretch" d:DesignWidth="400">

    <Grid Name="Grid_Main">
        <CheckBox Margin="7,5,0,5" HorizontalAlignment="Left"/>
        <TextBox x:Name="TextBox_Command" Margin="30,1,143,1" VerticalContentAlignment="Center" AcceptsReturn="True" MaxHeight="40" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="Button_Send" HorizontalAlignment="Right" Width="138" Margin="0,1" Click="Button_Send_Click" Content="測試" Height="25"/>
    </Grid>
</ListBoxItem>
